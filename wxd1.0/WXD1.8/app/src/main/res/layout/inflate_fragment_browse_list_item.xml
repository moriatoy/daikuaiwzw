<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/fragment_browse_list_item_ll_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/padding"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            
            <ImageView
                android:id="@+id/fragment_browse_list_item_iv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/logo"
                />

            <TextView
                android:id="@+id/fragment_browse_list_item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AAA"
                style="@style/text_12_3"
                android:layout_marginTop="7dp"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="14dp">

            <TextView
                android:id="@+id/fragment_browse_list_item_tv_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BBB"
                style="@style/text_16_3"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/fragment_browse_list_item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="CCC"
                style="@style/text_14_6"
                android:layout_marginTop="3dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_browse_list_item_tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DDD"
                    android:textSize="14sp"
                    android:textColor="@color/color_f33d3d"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人借款成功"
                    android:textSize="14sp"
                    android:textColor="@color/color_2a"
                    />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/icon_list_in"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_separator"
        android:layout_marginLeft="15dp"/>

</LinearLayout>