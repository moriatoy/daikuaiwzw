<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal"
        style="@style/padding"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额"
                style="@style/text_14_3"
                />

            <EditText
                android:id="@+id/product_activity_list_item_loan_detail_et_money"
                android:layout_width="77dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="@color/colorMain"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_r_4_colormain_stroke"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:hint="0"
                android:textColorHint="@color/colorMain"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                style="@style/text_14_3"
                android:layout_marginLeft="6dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期限"
                style="@style/text_14_3"
                />

            <EditText
                android:id="@+id/product_activity_list_item_loan_detail_et_time"
                android:layout_width="77dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="@color/colorMain"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_r_4_colormain_stroke"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:hint="0"
                android:textColorHint="@color/colorMain"
                />

            <TextView
                android:id="@+id/product_activity_list_item_loan_detail_tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                style="@style/text_14_3"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            
            <LinearLayout
                android:layout_width="91dp"
                android:layout_height="76dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/color_eff6ff"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日还款"
                    android:textSize="14sp"
                    android:textColor="@color/colorMain"
                    />

                <TextView
                    android:id="@+id/product_activity_list_item_loan_detail_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:textSize="14sp"
                    android:textColor="@color/colorMain"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    />

            </LinearLayout>
            
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="91dp"
                android:layout_height="76dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/color_eff6ff"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总利息"
                    android:textSize="14sp"
                    android:textColor="@color/colorMain"
                    />

                <TextView
                    android:id="@+id/product_activity_list_item_loan_detail_tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:textSize="14sp"
                    android:textColor="@color/colorMain"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="91dp"
                android:layout_height="76dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/color_eff6ff"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/product_activity_list_item_loan_detail_tv_ratetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日利率"
                    android:textSize="14sp"
                    android:textColor="@color/colorMain"
                    />

                <TextView
                    android:id="@+id/product_activity_list_item_loan_detail_tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/colorMain"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_background"/>

</LinearLayout>