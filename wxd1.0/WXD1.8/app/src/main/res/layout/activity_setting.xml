<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fuzhuangfaqianla.xinhuahua.ui.me.SettingActivity"
    android:orientation="vertical"
    android:background="@color/color_background"
    android:fitsSystemWindows="true">

    <include layout="@layout/comm_title"/>

    <LinearLayout
        android:id="@+id/setting_activity_ll_vip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        style="@style/padding"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Vip交流群"
            style="@style/text_14_3"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_list_in"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_activity_ll_general"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        style="@style/padding"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="通用"
            style="@style/text_14_3"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_list_in"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_activity_ll_about_us"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        style="@style/padding"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="关于我们"
            style="@style/text_14_3"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_list_in"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_activity_ll_faq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        style="@style/padding"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="常见问题"
            style="@style/text_14_3"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_list_in"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_activity_ll_modify_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        style="@style/padding"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="修改密码"
            style="@style/text_14_3"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_list_in"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_activity_ll_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        style="@style/padding"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="退出登录"
            style="@style/text_14_3"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_list_in"/>
    </LinearLayout>



</LinearLayout>
