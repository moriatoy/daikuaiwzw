<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your theme here. -->
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>

    <!--透明状态栏-->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WindowBackground" parent="@style/AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@drawable/window_bg</item>-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--标题与NavigationIcon的距离-->
    <style name="Toolbar.MyStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <!--tablayout字体-->
    <style name="tablayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_18_3">
        <item name="android:textColor">@color/color_33</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_16_9">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_16_6">
        <item name="android:textColor">@color/color_66</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_16_4a">
        <item name="android:textColor">@color/color_4a</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_16_3">
        <item name="android:textColor">@color/color_33</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_14_9">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_14_colormain">
        <item name="android:textColor">@color/colorMain</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_14_6">
        <item name="android:textColor">@color/color_66</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_14_3">
        <item name="android:textColor">@color/color_33</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_12_3">
        <item name="android:textColor">@color/color_33</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_12_3f">
        <item name="android:textColor">@color/color_3f</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_12_6">
        <item name="android:textColor">@color/color_66</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_12_9">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="padding">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="padding_left">
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="padding_right">
        <item name="android:paddingRight">15dp</item>
    </style>

    <!--点击水波纹-->
    <style name="click_bg">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="click_fg">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <!-- 对话框样式 -->
    <style name="Theme.Light.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="Theme.Light.NoBG.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- iOS7 Style -->
    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#f23030</item>
        <item name="otherButtonTextColor">#1E82FF</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">16sp</item>
    </style>


</resources>
